{
    "parser": "babel-eslint",
    "plugins":["riot"],
    "env": {
        "browser": true,
        "jquery": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "App": false,
        "riot": false,
        "google": false,
        "require" : false
    },
    "rules": {
        "no-console": "off",
        "no-extra-semi": "warn",
        "no-undef": "warn",
        "quotes": ["warn", "single"],
        "space-before-blocks": "off",
        "no-var":"error",
        "no-unused-vars":["error", { "vars": "all", "args": "none"}]
    }
}
